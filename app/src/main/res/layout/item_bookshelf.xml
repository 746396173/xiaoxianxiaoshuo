<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20mm"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="183mm"
        android:layout_height="233mm"
        android:layout_margin="20mm"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20mm"
        android:layout_marginRight="20mm"
        android:layout_marginBottom="10mm"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="书名" />

    <TextView
        android:id="@+id/tv_progress"
        style="@style/tv_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20mm"
        android:layout_marginRight="20mm"
        android:layout_marginBottom="20mm"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="已读"
        android:textSize="20mm" />

</LinearLayout>

