<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.xh.common.view.TitleView
        android:id="@+id/title_view"
        style="@style/title"
        app:rightImg="@drawable/ic_setting"
        app:titleText="我的"></com.xh.common.view.TitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30mm"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="100mm"
                    android:layout_height="100mm"
                    android:layout_margin="20mm"
                    android:src="@drawable/ic_avatar" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击设置昵称"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="30mm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20mm">

                <TextView
                    android:id="@+id/tv_invitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="30mm" />

                <Button
                    android:id="@+id/btn_share"
                    style="@style/btn_style"
                    android:layout_margin="20mm"
                    android:background="@drawable/shape_bg_red_5dp"
                    android:text="分享app给好友" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_history"
                android:layout_width="match_parent"
                android:layout_height="88mm"
                android:layout_marginTop="20mm"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25mm"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_history"
                    android:drawablePadding="12dp"
                    android:text="历史记录"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="28mm" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25mm"
                    android:src="@drawable/ic_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="88mm"
                android:layout_marginTop="20mm"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25mm"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_feedback"
                    android:drawablePadding="12dp"
                    android:text="意见反馈"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="28mm" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25mm"
                    android:src="@drawable/ic_next" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="88mm"
                android:layout_marginTop="20mm"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25mm"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_disclaimer"
                    android:drawablePadding="12dp"
                    android:text="免责声明"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="28mm" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25mm"
                    android:src="@drawable/ic_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_about"
                android:layout_width="match_parent"
                android:layout_height="88mm"
                android:layout_marginTop="20mm"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25mm"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_about"
                    android:drawablePadding="12dp"
                    android:text="关于"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="28mm" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25mm"
                    android:src="@drawable/ic_next" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

